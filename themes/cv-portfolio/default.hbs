<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{meta_title}}</title>
    {{ghost_head}}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="{{asset "built/style.css"}}" />
    <link rel="stylesheet" href="{{asset "css/style.css"}}" />
  </head>
  <body class="is-page-{{post_class}}">
    <header class="site-header">
      <div class="container">
        <a class="brand" href="/">{{@site.title}}</a>
        <div class="site-right">
          <button type="button" class="icon-button menu-toggle" aria-label="Menu" aria-expanded="false" aria-controls="mobile-menu" title="Menu">
            <svg aria-hidden="true" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
          </button>
          <nav class="site-nav nav-en">{{navigation}}</nav>
          <nav class="site-nav nav-zh" hidden>{{navigation type="secondary"}}</nav>
          <div class="header-actions">
            <button type="button" class="icon-button" data-ghost-search aria-label="Search" title="Search">
              <svg aria-hidden="true" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="7"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
            </button>
            <div class="theme-dropdown">
              <button type="button" class="icon-button theme-toggle" aria-haspopup="true" aria-expanded="false" aria-controls="theme-menu" title="Theme">
                <span class="theme-icon" aria-hidden="true"></span>
                <span class="sr-only">Toggle theme</span>
              </button>
              <div id="theme-menu" class="dropdown" role="menu" hidden>
                <button type="button" class="menu-item" role="menuitemradio" aria-checked="false" data-mode="auto">Automatic</button>
                <button type="button" class="menu-item" role="menuitemradio" aria-checked="false" data-mode="light">Light</button>
                <button type="button" class="menu-item" role="menuitemradio" aria-checked="false" data-mode="dark">Dark</button>
              </div>
            </div>
            <div class="lang-dropdown">
              <button type="button" class="icon-button lang-toggle" aria-haspopup="true" aria-expanded="false" aria-controls="lang-menu" title="Language">
                <span class="lang-icon" aria-hidden="true"></span>
                <span class="sr-only">Toggle language</span>
              </button>
              <div id="lang-menu" class="dropdown" role="menu" hidden>
                <button type="button" class="menu-item" role="menuitemradio" aria-checked="false" data-lang="zh">中文</button>
                <button type="button" class="menu-item" role="menuitemradio" aria-checked="false" data-lang="en">English</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
    <div id="mobile-menu" class="mobile-menu" hidden>
      <nav class="mobile-nav nav-en">{{navigation}}</nav>
      <nav class="mobile-nav nav-zh" hidden>{{navigation type="secondary"}}</nav>
    </div>

    <main class="site-main">
      {{{body}}}
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>© {{date format="YYYY"}} {{@site.title}}</p>
      </div>
    </footer>

    {{ghost_foot}}
    <script src="{{asset "built/main.js"}}"></script>
  </body>
  </html>


