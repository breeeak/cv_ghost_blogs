{{! Featured posts (if any) }}
{{#get "posts" filter="featured:true+tag:-hash-lang-zh" limit="3" include="authors,tags"}}
  {{#if posts}}
    <section id="featured-posts" class="section container">
      <h2>Posts</h2>
      <div class="cards">
        {{#foreach posts}}
          <article class="card">
            {{#if feature_image}}
              <a href="{{url absolute="true"}}"><img class="card-cover" src="{{img_url feature_image size="m"}}" alt="{{title}}" loading="lazy" /></a>
            {{/if}}
            <h3><a href="{{url absolute="true"}}">{{title}}</a></h3>
            <p class="time">{{date published_at format="YYYY-MM-DD"}} · {{reading_time minute="1 min read" minutes="% min read"}}</p>
            {{#if excerpt}}
              <p>{{excerpt}}</p>
            {{/if}}
            <p><a class="btn small" href="{{url absolute="true"}}">Read more</a></p>
          </article>
        {{/foreach}}
      </div>
    </section>
  {{/if}}
{{/get}}

{{! Latest posts }}
{{#get "posts" filter="tag:-hash-lang-zh" limit="4" include="authors,tags" order="published_at desc"}}
  {{#if posts}}
    <section id="latest-posts" class="section container">
      <h2>Posts</h2>
      <div class="cards">
        {{#foreach posts}}
          <article class="card">
            {{#if feature_image}}
              <a href="{{url absolute="true"}}"><img class="card-cover" src="{{img_url feature_image size="m"}}" alt="{{title}}" loading="lazy" /></a>
            {{/if}}
            <h3><a href="{{url absolute="true"}}">{{title}}</a></h3>
            <p class="time">{{date published_at format="YYYY-MM-DD"}} · {{reading_time minute="1 min read" minutes="% min read"}}</p>
            {{#if excerpt}}
              <p>{{excerpt}}</p>
            {{/if}}
            <p><a class="btn small" href="{{url absolute="true"}}">Read more</a></p>
          </article>
        {{/foreach}}
      </div>
      <p style="margin-top:12px"><a class="btn" href="/blog/">View all posts</a></p>
    </section>
  {{/if}}
{{/get}}

